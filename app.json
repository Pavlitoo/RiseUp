{
  "expo": {
    "name": "RiseUp",
    "slug": "RiseUp",
    "version": "2.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "riseup",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "description": "Професійний додаток для формування корисних звичок з геймифікацією, досягненнями та детальною статистикою",
    "keywords": [
      "habits",
      "productivity",
      "gamification",
      "health",
      "lifestyle",
      "achievements",
      "statistics",
      "motivation"
    ],
    "privacy": "public",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.riseup.habits",
      "buildNumber": "3"
    },
    "android": {
      "package": "com.riseup.habits",
      "versionCode": 3,
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ],
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "65a05473-6372-4e24-b9c7-babe3474240c"
      }
    }
  }
}
